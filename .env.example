# RAG System Configuration
# Copy this file to .env and customize as needed

# ============ Application ============
APP_NAME="RAG System"
APP_ENV=development
DEBUG=true

# ============ Server ============
HOST=0.0.0.0
PORT=8000

# ============ LLM API Keys ============
# Required for embeddings and generation
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============ Generation ============
# Set to true to enable LLM-powered answers (requires API keys)
GENERATION_ENABLED=false

# Model selection
CHEAP_MODEL=gpt-3.5-turbo
EXPENSIVE_MODEL=gpt-4-turbo-preview
COMPLEXITY_THRESHOLD=0.7

# ============ Retrieval ============
# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# FAISS
EMBEDDING_DIM=1536
FAISS_INDEX_TYPE=Flat

# ============ Confidence & Refusal ============
CONFIDENCE_THRESHOLD=0.4
REFUSAL_THRESHOLD=0.25
REFUSAL_MESSAGE="I don't have enough confidence in the available information to answer this question accurately."

# ============ Observability ============
ENABLE_METRICS=true
LOG_LEVEL=INFO
